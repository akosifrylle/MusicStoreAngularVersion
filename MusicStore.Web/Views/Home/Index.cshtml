@using System.Web.Optimization
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" ng-app="musicStoreApp">
<head>
    <title>Music Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render(
      "~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="#">Music Store</a>
                <div class="nav-collapse collapse">
                    <ul class="nav" ng-controller="NavbarController">
                        <li ng-class="{'active': getClass('/Home')}"><a href="#/Home">Home</a></li>
                        <li ng-class="{'active': getClass('/Store')}"><a href="#/Store">Store</a></li>
                        <li ng-class="{'active': getClass('/Cart')}"><a href="#/Cart">Cart</a></li>
                        <li ng-class="{'active': getClass('/Admin')}"><a href="#/Admin">Admin</a></li>
                        <li ng-class="{'active': getClass('/StoreManager')}"><a href="#/StoreManager">Store Manager</a></li>
                        <li ng-class="{'active': getClass('/Artist')}"><a href="#/Artist">Artist</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span2">
                <div ng-controller="GenreListController" class="well sidebar-nav">
                    <ul class="nav nav-list">
                        <li class="nav-header">Genre</li>
                        <li ng-repeat="genre in genres" ng-class="{'active': genre.selected}">
                            <a href="#/Store/Browse?genre={{genre.name}}">
                                <span ng-bind="genre.name"></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="span10">
                <div ng-view ng-animate="{enter: 'animate-enter', leave: 'animate-leave'}" />
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <hr>
                <footer>
                    <p>© Company 2013</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render(
            "~/bundles/jquery",
            "~/bundles/jqueryval",
            "~/bundles/modernizr",
            "~/bundles/bootstrap",
            "~/bundles/angular",
            "~/bundles/musicstore-app")
</body>
</html>


